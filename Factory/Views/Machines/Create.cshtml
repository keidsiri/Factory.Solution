@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required="required"})

  @Html.Label("Choose home engineer")
  @Html.DropDownList("EngineerId")

  @Html.LabelFor(model => model.Brand)
  @Html.TextBoxFor(model => model.Brand)



  <input type="submit" value="Add new machine" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all machines", "Index")</p>